<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblNome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Nome:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblMedia"
        android:layout_width="121dp"
        android:layout_height="wrap_content"

        android:text="MÃ©dia:"
        app:layout_constraintBottom_toBottomOf="@+id/lblNota2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lblNota2"
        app:layout_constraintTop_toTopOf="@+id/lblNota2"
        app:layout_constraintVertical_bias="0.321" />

    <TextView
        android:id="@+id/lblNota2"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:text="Nota 2:"
        app:layout_constraintBottom_toBottomOf="@+id/lblNota1"
        app:layout_constraintEnd_toStartOf="@+id/lblMedia"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/lblNota1"
        app:layout_constraintTop_toTopOf="@+id/lblNota1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lblNota1"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Nota 1:"
        app:layout_constraintEnd_toStartOf="@+id/lblNota2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNome" />

    <ListView
        android:id="@+id/listaContatos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>